pipeline {
    agent any
    environment {
        DOCKER_WORKSPACE = "${WORKSPACE}".replaceAll("\\\\", "/") // Преобразуем обратные слеши в прямые
    }
    stages {
        stage('Project build') {
            steps {
                cleanWs()
                checkout scm
                echo 'Building #${env.JOB_NAME}...'
            }
        }
        stage('Run tests') {
            agent {
                dockerfile {
                    reuseNode true
                    args '-u root'
                }
            }
            steps {
                sh "mvn clean test -Dsuite=${SUITE} -Dconfig=${CONFIG}"
            }
            post {
                always {
                    script {
                        sh "docker exec -u root -w ${DOCKER_WORKSPACE} <your_container_id> chown -R 1003:1003 ./target/allure-results"
                        archiveArtifacts artifacts: '${DOCKER_WORKSPACE}/target/allure-results/*', allowEmptyArchive: true
                        archiveArtifacts artifacts: '${DOCKER_WORKSPACE}/target/logs/*', allowEmptyArchive: true
                        allure([
                            includeProperties: false,
                            jdk: '',
                            properties: [],
                            reportBuildPolicy: 'ALWAYS',
                            results: [[path: '${DOCKER_WORKSPACE}/target/allure-results']]
                        ])
                    }
                }
            }
        }
    }
}