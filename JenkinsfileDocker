pipeline {
    agent any
    stages {
        stage('Project build') {
            steps {
                 cleanWs()
                 checkout scm
                 echo 'Building #${env.JOB_NAME}...'
            }
        }
        stage('Run tests') {
            agent {
                dockerfile {
                    dir 'C:/ProgramData/Jenkins/.jenkins/workspace/QA_TSM_Diploma'
                    reuseNode true
                    args '-u root'
                }
            }
            steps {
                powershell 'mvn clean test -Dsuite=${SUITE} -Dconfig=${CONFIG}'
            }
            post('Allure results') {
                  always {
                        powershell 'chown -R 1003:1003 ./target/allure-results'
                        archiveArtifacts artifacts: 'target/allure-results/*', allowEmptyArchive: true
                        archiveArtifacts artifacts: 'target/logs/*', allowEmptyArchive: true
                  }
            }
        }
    }
      post {
                    always {
                            script {
                                allure([
                                        includeProperties: false,
                                        jdk: '',
                                        properties: [],
                                        reportBuildPolicy: 'ALWAYS',
                                        results: [[path: 'target/allure-results']]
                                ])
                            }
                    }
          }
}